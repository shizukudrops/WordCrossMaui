<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordCrossMaui.AboutPage"
             Title="About">
    
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        </Style>
    </ContentPage.Resources>
    
    <VerticalStackLayout Margin="50, 10, 50, 50" Spacing="10" HorizontalOptions="Center">
        <Label x:Name="AppNameLabel" HorizontalOptions="Center" FontSize="Header" />
        <Label x:Name="VersionLabel" HorizontalOptions="Center" FontSize="Medium" />
        <Label x:Name="AuthorLabel"  HorizontalOptions="Center" FontSize="Default" />
        <Label Text="Icons Powered by: https://icons.theforgesmith.com" />
        <Button Text="戻る" Clicked="Return_Clicked" />
        <HorizontalStackLayout Margin="0, 30, 0, 0" HorizontalOptions="Center">
            <CheckBox CheckedChanged="Initialize_CheckedChanged" VerticalOptions="Center" />
            <Label Text="次回起動時に初期化" VerticalOptions="Center" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>