<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WordCrossMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WordCrossMaui"
    FlyoutBehavior="Disabled">
    
    <ShellContent
        Title="Search"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="Main" />

    <ShellContent
        Title="辞書を追加"
        ContentTemplate="{DataTemplate local:AddDictionaryPage}"
        Route="AddDictionary" />

    <ShellContent
        Title="プリセットの辞書から追加"
        ContentTemplate="{DataTemplate local:AddFromPresetPage}"
        Route="AddFromPreset" />

    <ShellContent
        Title="辞書の管理"
        ContentTemplate="{DataTemplate local:ManageDictionaryPage}"
        Route="ManageDictionary" />

    <ShellContent
        Title="設定"
        ContentTemplate="{DataTemplate local:AboutPage}"
        Route="About"/>

</Shell>
