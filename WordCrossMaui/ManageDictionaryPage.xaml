<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordCrossMaui.ManageDictionaryPage"
             Title="Manage Dictionaries">

    <Grid ColumnSpacing="10" Margin="50, 10, 50, 50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <ListView Grid.Column="0" x:Name="dictList" BackgroundColor="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding Name}" Padding="0, 5, 0, 5" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <VerticalStackLayout Grid.Column="1" Spacing="10">
            <Button Text="削除" Clicked="Remove_Clicked" />
            <Button Text="戻る" Clicked="Return_Clicked" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>